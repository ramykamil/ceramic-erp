{
    "name": "allaoua-ceram-erp-client",
    "version": "1.0.0",
    "description": "Allaoua Ceram ERP - Application Client",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win",
        "build:portable": "electron-builder --win portable"
    },
    "author": "Ramy Kamil Mecheri",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.allaouaceram.erp.client",
        "productName": "Allaoua Ceram ERP",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "icon.png"
        },
        "nsis": {
            "oneClick": true,
            "installerIcon": "icon.png",
            "uninstallerIcon": "icon.png",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Allaoua Ceram ERP"
        }
    }
}